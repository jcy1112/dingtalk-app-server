<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.softeng.dingtalk.mapper.PaperMapper">


    <!--  论文列表项数据  -->
    <resultMap id="PaperInfo" type="com.softeng.dingtalk.vo.PaperInfoVO">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="journal" property="journal"/>
        <result column="issue_date" property="issueDate"/>
        <collection property="authors" ofType="com.softeng.dingtalk.vo.AuthorVO" >
            <result column="name" property="name"/>
            <result column="num" property="num" />
        </collection>
    </resultMap>


    <select id="listPaperInfo" resultMap="PaperInfo">
        SELECT
	        p.id,
	        p.title,
	        p.journal,
	        p.issue_date,
	        u.name,
	        pd.num
        FROM
	        paper p
	        LEFT JOIN paper_detail pd on p.id = pd.paper_id
	        LEFT JOIN user u on pd.user_id = u.id
    </select>


</mapper>